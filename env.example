# 254Carbon Access Layer - Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
ACCESS_ENV=development
ACCESS_LOG_LEVEL=info
ACCESS_ENABLE_TRACING=false
ACCESS_TRACE_SAMPLING_RATE=0.1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Configuration
POSTGRES_DSN=postgresql://access_user:access_pass@localhost:5432/access_layer

# Kafka Configuration
KAFKA_BOOTSTRAP=localhost:9092

# Keycloak Configuration
KEYCLOAK_JWKS_URL=http://localhost:8080/realms/254carbon/protocol/openid-connect/certs

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123

# Service URLs (for service-to-service communication)
AUTH_SERVICE_URL=http://localhost:8010
ENTITLEMENTS_SERVICE_URL=http://localhost:8011
METRICS_SERVICE_URL=http://localhost:8012
STREAMING_SERVICE_URL=http://localhost:8001
GATEWAY_SERVICE_URL=http://localhost:8000
SEARCH_SERVICE_URL=http://localhost:9007

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin123

# API Keys (for fallback authentication)
API_KEY_GATEWAY=gateway-api-key-123
API_KEY_STREAMING=streaming-api-key-456

# Rate Limiting
RATE_LIMIT_PUBLIC=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_HEAVY=100
RATE_LIMIT_ADMIN=10000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_JWKS=3600
CACHE_TTL_ENTITLEMENTS=600

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=ConnectionError

# Metrics Configuration
METRICS_RETENTION_HOURS=24
METRICS_AGGREGATION_WINDOW=60

# Security
JWT_SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key

# Development
PYTHONPATH=.
PYTHONUNBUFFERED=1
